@model Presentation.ViewModel.VooViewModel
@{
    ViewData["Title"] = "Cadastrar Voo";
}
<h1>Criar Voo</h1>

<form asp-action="Criar" method="post">
    <div>
        <label asp-for="AeroportoOrigemID">Aeroporto de Origem:</label>
        <input asp-for="AeroportoOrigemID" />
        <span asp-validation-for="AeroportoOrigemID"></span>
    </div>

    <div>
        <label asp-for="AeroportoDestinoID">Aeroporto de Destino:</label>
        <input asp-for="AeroportoDestinoID" />
        <span asp-validation-for="AeroportoDestinoID"></span>
    </div>

    <div>
        <label asp-for="DataHoraPartida">Data e Hora de Partida:</label>
        <input asp-for="DataHoraPartida" type="datetime-local" />
        <span asp-validation-for="DataHoraPartida"></span>
    </div>

    <button type="submit">Salvar</button>
</form>

<a asp-action="Index">Voltar para a Lista</a>