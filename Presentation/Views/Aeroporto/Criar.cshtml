@model Presentation.ViewModel.AeroportoViewModel
@{
    ViewData["Title"] = "Criar Aeroporto";
}
<form asp-action="Criar" method="post" class="form-control">
    <div>
        <label asp-for="CodigoIATA">Código IATA:</label>
        <input asp-for="CodigoIATA" />
        <span asp-validation-for="CodigoIATA"></span>
    </div>

    <div>
        <label asp-for="Nome">Nome:</label>
        <input asp-for="Nome" />
        <span asp-validation-for="Nome"></span>
    </div>

    <div>
        <label asp-for="NomeCidade">Cidade:</label>
        <input asp-for="NomeCidade" />
        <span asp-validation-for="NomeCidade"></span>
    </div>

    <button type="submit">Salvar</button>
</form>

<a asp-action="Index">Voltar para a Lista</a>
