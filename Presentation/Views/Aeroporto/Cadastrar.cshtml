@model Application.DTOs.AeroportoDTO
@{
    ViewData["Title"] = "Cadastrar Aeroporto";
}

<div class="container">

<h2>@ViewData["Title"]</h2>

    <form asp-action="Cadastrar" method="post">
        <div class="form-group">
            <label asp-for="Nome">Nome:</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IataID">Código IATA:</label>
            <input asp-for="IataID" class="form-control" />
            <span asp-validation-for="IataID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CidadeID">Cidade:</label>
            <select asp-for="CidadeID" asp-items="@(new SelectList(ViewBag.Cidades, "Value", "Text"))" class="form-control">
                <option value="">Selecione a cidade</option>
            </select>
            <span asp-validation-for="CidadeID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </div>
    </form>
</div>
@section Scripts {
    <script>
        // Script para atualizar o campo NomeCidade ao selecionar uma cidade
        $(document).ready(function () {
            $("#CidadeID").change(function () {
                var cidadeNome = $("#CidadeID option:selected").text().trim();
                $("#NomeCidade").val(cidadeNome);
            });
        });
    </script>
}