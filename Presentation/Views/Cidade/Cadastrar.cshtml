@model Application.DTOs.CidadeDTO
@{
    ViewData["Title"] = "Cadastrar Cidade";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Cadastrar" method="post">
        <div class="form-group">
            <label asp-for="Nome">Nome:</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UnidadeFederativa">Unidade Federativa:</label>
            <input asp-for="UnidadeFederativa" class="form-control" />
            <span asp-validation-for="UnidadeFederativa" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </div>
    </form>
</div>
